{
  "name": "root",
  "private": true,
  "description": "A monorepo for all npm packages in the Tasit ecosystem",
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.13.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "lerna": "^3.20.2",
    "npm-check-updates": "^4.1.2",
    "prettier": "^2.0.5",
    "prettier-plugin-solidity": "^1.0.0-alpha.49",
    "ts-node": "^8.9.1",
    "tsdx": "^0.13.2",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "postinstall": "npm run bootstrap",
    "audit:fix:all": "npx lerna exec --stream --concurrency 1 npm audit fix",
    "update": "npx ncu -x '@types/mocha, @types/node'",
    "update:write": "npm run update -- -u",
    "update:all": "npx lerna run update --stream --concurrency 1",
    "update:all:write": "npx lerna run update:write --concurrency 1",
    "clean:all": "npx lerna run clean --stream && npx lerna clean --yes && rm -rf ./node_modules",
    "publish": "npm run clean:all && npm run bootstrap && npm test && npx lerna publish",
    "bootstrap": "npx lerna bootstrap",
    "buidler-evm:start": "npx buidler node > buidler-evm.log &",
    "buidler-evm:stop": "echo 'implement me'",
    "buidler-evm:watch": "tail -f -n 100 buidler-evm.log",
    "buidler:migrate": "npx lerna run compile --scope @tasit/contracts --stream",
    "builder:migrate:rinkeby": "npx lerna run compile:rinkeby --scope @tasit/contracts --stream",
    "prepare:blockchain": "npm run buidler-evm:stop && npm run buidler-evm:start && npm run buidler:migrate",
    "pretest": "npm run prepare:blockchain && npm run lint",
    "test": "npx lerna run test --stream --concurrency 1",
    "posttest": "npm run buidler-evm:stop",
    "start": "npm run clean:all && npm run bootstrap && npm run prepare:blockchain",
    "lint": "npx prettier --write './packages/*/src/{*.js,*.ts,**/*.js,**/*.ts}' && npx eslint './packages/*/src/{*.js,*.ts,**/*.js,**/*.ts}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tasitlabs/tasit-sdk.git"
  },
  "keywords": [
    "dapp",
    "ethereum",
    "react",
    "native"
  ],
  "author": "Tasit Labs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tasitlabs/tasit-sdk/issues"
  },
  "homepage": "https://github.com/tasitlabs/tasit-sdk#readme",
  "engines": {
    "node": ">=10.15.0",
    "npm": ">=6.4.1"
  }
}
